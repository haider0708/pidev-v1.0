    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        table {
            margin-top: 20px; /* Adjust the margin as needed */
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .image-cell {
            max-width: 50px; /* Set a smaller maximum width for the cell */
        }
    </style>
</head>
<body>
    <!-- AdminHub Sidebar -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Health Arena</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="#">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <!-- ******************************************PHARMACIE BOUTON***********************************************************-->
            <style>
                .Pharmacie-toggle {
                    text-decoration: underline;
                    background-color: transparent;
                    border: none; /* Remove border */
                    color: black; /* Set text color to black */
                }

                .Pharmacie-toggle:hover {
                    text-decoration: underline;
                    background-color: transparent;
                    color: black; /* Set text color to black on hover */
                }
            </style>

            <div class="Pharmacie">
                <i class="fa-solid fa-suitcase-medical"></i>
                <button class="btn btn-secondary Pharmacie-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Pharmacie
                </button>
                <span class="Pharmacie-menu dropdown-menu">
                    <li><a class="dropdown-item" href="Addp">Ajouter</a></li>
                    <li><a class="dropdown-item" href="Affichep">Afficher</a></li>
                    
                </span>
            </div>

            <!-- ******************************************ORDONNANCE BOUTON***********************************************************-->
            <style>
                .Ordonnance-toggle {
                    text-decoration: underline;
                    background-color: transparent;
                    border: none; /* Remove border */
                    color: black; /* Set text color to black */
                }

                .Ordonnance-toggle:hover {
                    text-decoration: underline;
                    background-color: transparent;
                    color: black; /* Set text color to black on hover */
                }
            </style>

            <div class="Ordonnance">
                <i class="fa-solid fa-pills"></i>
                <button class="btn btn-secondary Ordonnance-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Ordonnance
                </button>
                <span class="Ordonnance-menu dropdown-menu">
                    <li><a class="dropdown-item" href="Addo">Ajouter</a></li>
                    <li><a class="dropdown-item" href="Afficheo">Afficher</a></li>
                </span>
            </div>
            <li>
                <a href="#">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text">Message</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-group'></i>
                    <span class="text">Team</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="#" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
      <section id="ordonnance-content">
       <style>
            /* Styles CSS pour le tableau */
            .custom-table {
                width: 125%;
                border-collapse: collapse;
                margin-top: 15px;
            }

            .custom-table th, .custom-table td {
                padding: 12px;
                border: 1px solid #ddd;
                font-weight: normal;
                text-align: center;
            }

            .custom-table th {
                background-color: #f5f5f5;
                color: #333;
            }

            .custom-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .custom-table tbody tr:hover {
                background-color: #e0e0e0;
            }

            .custom-table td a {
                display: inline-block;
                padding: 8px 12px;
                text-decoration: none;
                border-radius: 3px;
                margin-right: 5px;
                font-weight: bold;
            }

            .custom-table .btn-warning {
                background-color: gray;
                color: white;
            }

            .custom-table .btn-success {
                background-color: green;
                color: white;
            }

            .custom-table .btn-primary {
                background-color: blue;
                color: white;
            }
            
        </style>

    <!-- ordonnance List -->
    <div class="container">
        <h1 class="mt-4 text-center">Liste ordonnance</h1>
        <div>
            <table border="1" class="table">
                <tr>
                     <table class="custom-table">
                 <thead>
                    <th>nom du medecin</th>
                    <th>nom du patient</th>
                    <th>Description</th>
                    <th>Date de creation</th>
                     <th>pharmacie</th>
                    <th>edit</th>
                    <th>delete</th>
                </tr>
                 </thead>
                {% for o in ordonnance %}
                <tr>
                    
                    <td>{{ o.nommedecin }}</td>
                    <td>{{ o.nompatient }}</td>
                    <td>{{ o.description }}</td>
                      <td>{{ o.datedecreation | date('M-d-Y') }}</td>
                      <td>{{ o.pharmacie }}</td>
                    

                    <td><a href="{{ path('app_edito', {'id': o.id}) }}"class="btn btn-warning"> edit</a></td>
                    <td><a href="{{ path('app_deleteo', {'id': o.id}) }}"class="btn btn-success">delete</a></td>
                </tr>
                {% endfor %}
 
            </table>
        </div>
        </table>
    </div>
    <script src="script.js"></script>
</body>
</html>
