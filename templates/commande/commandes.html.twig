{% extends 'backTemplate.html.twig' %}
{% block titre%}
    <h1>Liste Des Commandes</h1>
{% endblock %}
{% block content %}
    <input id="myInput" type="text" value="" name="Search" class="form-control" placeholder=" recherche commande " autofocus>
    <div>
    
   	<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="{{ path ('app_addCommande') }}" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">New Command</span>
				</a>
			</div>

		

			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Orders</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>nomclient</th>
								<th>adresseclient</th>
								<th>numtelclient</th>
                                <th>Actions</th>
							</tr>
						</thead>
						<tbody>
                         {% for commande in commands %}
							<tr>
								<td>
									 
									<p>{{ commande.nomClient }}</p>
								</td>
								<td>{{ commande.addresseClient }}</td>
								<td><span class="status completed">{{ commande.numeroClient }}</span></td>
                                <td><a href="{{path ('app_detailCommande',{id:commande.id})}} " class="card-link"><i class="bi bi-info-circle"></i></a>
                            <a href="{{path ('app_deleteCommande',{id:commande.id})}} " class="card-link" onclick="return confirmDelete();"><i class="bi bi-trash"></i></a>
                            <a href="{{path ('app_addCommande',{id:commande.id})}} " class="card-link"><i class="bi bi-pencil"></i></a></td>
							</tr>
						  {% endfor %}
						</tbody>
					</table>
				</div>
				
			</div>
		</main>

    

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
    }
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
   
	
{% endblock %}
