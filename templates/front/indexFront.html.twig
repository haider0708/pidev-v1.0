{% extends 'front/front.html.twig' %}

{% block content %}
<style>

/* Reset some default styles */
body, h3, table {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body and overall page styling */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f8f9fa;
    color: #212529;
    padding: 20px;
}

/* Event header styling */
.event-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.event-title {
    color: #0d6efd; /* Soft blue for a healthcare look */
    font-size: 24px;
}

.event-actions i {
    font-size: 24px;
    margin-left: 10px;
    cursor: pointer;
    color: #0d6efd;
}

/* Table styling */
.event-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.event-table th,
.event-table td {
    text-align: left;
    padding: 12px 15px;
    border-bottom: 1px solid #dee2e6;
}

.event-table th {
    background-color: #e9ecef;
    color: #495057;
}

.event-table tr:last-child td {
    border-bottom: none;
}

/* No records found row styling */
.event-table tbody tr td[colspan="3"] {
    text-align: center;
    color: #6c757d;
    padding: 20px;
}

/* Responsiveness */
@media screen and (max-width: 768px) {
    .event-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .event-actions {
        margin-top: 10px;
    }
}

</style>
<div class="order">
    <div class="event-header">
        <h3 class="event-title">Événements</h3>
        <div class="event-actions">
            <i class='bx bx-search' aria-hidden="true"></i>
            <i class='bx bx-filter' aria-hidden="true"></i>
        </div>
    </div>
    <table class="event-table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>Lieu</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.titre }}</td>
                    <td>{{ event.date|date('Y-m-d') }}</td>
                    <td>{{ event.lieu }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="events-container">
    <div class="event-card">
        <img src="chemin_vers_image_evenement_1.jpg" alt="Nom Evenement 1" class="event-image">
        <div class="event-info">
            <h3>Nom de l'Événement 1</h3>
            <p class="event-date">Date: 24 Février 2024</p>
            <p class="event-description">Description courte de l'événement. Quelques détails supplémentaires ici.</p>
        </div>
    </div>
    <div class="event-card">
        <img src="chemin_vers_image_evenement_2.jpg" alt="Nom Evenement 2" class="event-image">
        <div class="event-info">
            <h3>Nom de l'Événement 2</h3>
            <p class="event-date">Date: 10 Mars 2024</p>
            <p class="event-description">Description courte de l'événement. Plus d'informations sur ce qui est prévu.</p>
        </div>
    </div>
    <!-- Répétez pour d'autres événements -->
</div>
<style>.events-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 20px;
}

.event-card {
    width: 300px;
    margin: 20px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
}

.event-card:hover {
    transform: translateY(-5px);
}

.event-image {
    width: 100%;
    height: 200px;
    object-fit: cover; /* Assurez-vous que les images couvrent bien la zone dédiée sans être déformées */
}

.event-info {
    padding: 15px;
}

.event-info h3 {
    margin-top: 0;
    color: #333;
}

.event-date {
    font-size: 14px;
    color: #666;
    margin-top: 5px;
}

.event-description {
    font-size: 16px;
    margin-top: 10px;
    color: #444;
}
</style>
{% endblock %} 
