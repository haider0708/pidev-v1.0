
{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="container">
    <h1 class="mt-4">edit</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
            <table class="table">
                <tr>
                    <td>{{ form_label(form.nom, 'Nom') }}</td>
                    <td>{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.description, 'Description') }}</td>
                    <td>{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.prix, 'Prix') }}</td>
                    <td>{{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.categorie, 'Catégorie') }}</td>
                    <td>{{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.quantite, 'Quantité') }}</td>
                    <td>{{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                    <tr>
                    <td>{{ form_label(form.img, 'image') }}</td>
                    <td>{{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
            </table>
            <button type="submit" class="btn btn-success rounded-pill">edit</button> {# Utilisation de btn-success pour la couleur verte et rounded-pill pour la forme ronde #}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
