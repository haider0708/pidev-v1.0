<form method="post" action="{{ path('app_activity_delete', {'id': activity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity.id) }}">
    <button class="btn" style="background-color: #ff4d4d; color: white; border: none; cursor: pointer; padding: 10px 20px; border-radius: 5px; font-weight: bold;">Delete</button>
</form>
