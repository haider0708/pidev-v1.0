{% extends 'back/index.html.twig' %}

{% block titre %}
    <h1>List patients</h1>
{% endblock %}

{% block main %}
{% if is_granted('ROLE_SUPER_ADMIN') %}
<style>
    .patient-image {
        width: 50px;
        height: 50px;
    }

    .round-image {
        border-radius: 50%;
    }

    .table {
        width: 50%;
        margin: auto;
        margin-top: 20px;
    }

    .table td, .small-table th {
        text-align: center;
    }
</style>

<center>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Number</th>
                <th>Sex</th>
                <th>Age</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        {% for patient in patient %}
        <tr>
            <td>
                <img src="{{ asset(patient.img_path) }}" alt="Patient Image" style="width: 50px; height: 50px;" class="patient-image round-image">
            </td>
            <td>{{ patient.firstName }}</td>
            <td>{{ patient.lastName }}</td>
            <td>{{ patient.email }}</td>
            <td>{{ patient.number }}</td>
            <td>{{ patient.sexe }}</td>
            <td>{{ patient.age }}</td>
            <td><a href="{{ path('edit_patient', {'id': patient.id}) }}" class="card-link" onclick="return confirmEdit();"><i class="bi bi-pencil-square"></i></a></td>
            <td><a href="{{ path('delete_patient', {'id': patient.id})}}" class="card-link" onclick="return confirmDelete();"><i class="bi bi-trash"></i></a></td>
        </tr>
        {% endfor %}
    </table>
</center>
{% else %}
    <div class="alert alert-danger" role="alert">
        You do not have permission to access this page.
    </div>
{% endif %}
 <script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
    }
    function confirmEdit() {
        return confirm("Are you sure you want to edit this item?");
    }
</script>
{% endblock %}
