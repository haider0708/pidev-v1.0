<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="back/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>Health Arena</title>
     <!-- ******************************************PRODUIT BOUTON***********************************************************-->
            <style>
                .Produit-toggle {
                    text-decoration: underline;
                    background-color: transparent;
                    border: none; /* Remove border */
                    color: black; /* Set text color to black */
                }

                .Produit-toggle:hover {
                    text-decoration: underline;
                    background-color: transparent;
                    color: black; /* Set text color to black on hover */
                }
            </style>

            <!-- ******************************************Categorie BOUTON***********************************************************-->
             <style>
                .categorie-toggle {
                    text-decoration: underline;
                    background-color: transparent;
                    border: none;
                    color: black;
                }

                .categorie-toggle:hover {
                    text-decoration: underline;
                    background-color: transparent;
                    color: black;
                }
            </style>
</head>
<body>

<div class="container">
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Health Arena</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="#">
                    <i class='bx bxs-dashboard' ></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <div class="Produit border rounded p-3"> <!-- Ajout des classes border, rounded et p-3 pour les bordures, coins arrondis et un peu de marge intÃ©rieure -->
                <i class="fa-solid fa-suitcase-medical"></i>
                <button class="btn btn-secondary Produit-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Produit
                </button>
                <span class="Produit-menu dropdown-menu">
                    <li><a class="dropdown-item" href="Add">Ajouter</a></li>
                    <li><a class="dropdown-item" href="Affiche">Afficher</a></li>
                </span>
            </div>
            <div class="categorie">
                <i class="fa-solid fa-pills"></i>
                <button class="btn btn-secondary categorie-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    categorie
                </button>
                <span class="categorie-menu dropdown-menu">
                    <li><a class="dropdown-item" href="Addc">Ajouter</a></li>
                    <li><a class="dropdown-item" href="Affichec">Afficher</a></li>
                </span>
            </div>
            <li>
                <a href="#">
                    <i class='bx bxs-doughnut-chart' ></i>
                    <span class="text">Analytics</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-message-dots' ></i>
                    <span class="text">Message</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-group' ></i>
                    <span class="text">Team</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog' ></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="#" class="logout">
                    <i class='bx bxs-log-out-circle' ></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <div class="container">
        <h1 class="mt-4 text-center">Ajouter un Doctor</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
{% block body %}
{% if is_granted('ROLE_SUPER_ADMIN') %}
    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
        <div class="col">{{ form_row(form.firstname) }}</div>
        <div class="col">{{ form_row(form.lastname) }}</div>
        <div class="col">{{ form_row(form.email) }}</div>
        <div class="col">{{ form_row(form.roles) }}</div>
        <div class="col">{{ form_row(form.password) }}</div>
        <div class="col">{{ form_row(form.sexe) }}</div>
        <div class="col">{{ form_row(form.age) }}</div>
        <div class="col">{{ form_row(form.number) }}</div>
        <div class="col">{{ form_row(form.img_path) }}</div>
        <div class="col">{{ form_row(form.address) }}</div>
    {{ form_end(form) }}
    {% else %}
    <div class="alert alert-danger" role="alert">
        You do not have permission to access this page.
    </div>
{% endif %}
{% endblock %}
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>