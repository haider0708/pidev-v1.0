{% extends 'front/index.html.twig' %}

{% block body %}
    {% for pharmacie in pharmacies %}
        <div class="rating">
            {% set note = pharmacie.note ?? 0 %}
            {% for i in range(1, 5) %}
                {% set checked = i <= note ? 'checked' : '' %}
                <input type="radio" id="star{{ i }}" name="rating" value="{{ i }}" style="display: none;"  {{ checked }}>
                <label for="star{{ i }}">&#9733;</label>
            {% endfor %}
        </div>
        <p id="selectedRating">Note de la pharmacie : <span id="ratingValue">{{ note }}</span></p>
    {% endfor %}

    <script src="{{ asset('js/rating.js') }}"></script>
{% endblock %}
