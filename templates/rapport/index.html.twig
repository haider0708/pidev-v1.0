{% extends 'back/index.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block main %}
    <section id="rapport-content">
        <style>
            /* Styles CSS pour le tableau */
            .custom-table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 15px;
            }

            .custom-table th, .custom-table td {
                padding: 12px;
                border: 1px solid #ddd;
                font-weight: normal;
                text-align: center;
            }

            .custom-table th {
                background-color: #f5f5f5;
                color: #333;
            }

            .custom-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .custom-table tbody tr:hover {
                background-color: #e0e0e0;
            }

            .custom-table td a {
                display: inline-block;
                padding: 8px 12px;
                text-decoration: none;
                border-radius: 3px;
                margin-right: 5px;
                font-weight: bold;
            }

            .custom-table .btn-warning {
                background-color: gray;
                color: white;
            }

            .custom-table .btn-success {
                background-color: green;
                color: white;
            }

            .custom-table .btn-primary {
                background-color: blue;
                color: white;
            }
        </style>

        <h1 style="font-weight: bold;">Rapport index</h1>

        <table class="custom-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Note</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for rapport in rapports %}
                <tr>
                    <td>{{ rapport.id }}</td>
                    <td>{{ rapport.note }}</td>
                    <td>{{ rapport.type }}</td>
                    <td>
                        <a href="{{ path('app_rapport_show', {'id': rapport.id}) }}" class="btn btn-warning">Show</a>
                        <a href="{{ path('app_rapport_edit', {'id': rapport.id}) }}" class="btn btn-success">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_rapport_new') }}" class="btn btn-primary">Ajouter</a>
    </section>
{% endblock %}
