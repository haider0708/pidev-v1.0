{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="title">liste des rendez vous </h2>
                <h3 class="subtitle"></h3>
                
                <form method="post" action="{{ path('Extract_data') }}">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-file-export"></i> Exporter en PDF</button>
                </form>

                <table class="table">
                    <thead>
                        <tr>
                            <th>date</th>
                            <th>lieu</th>
                            <th>description</th>
                        </tr>
                    </thead>
                    <tbody>
                       {% for t in rendezvouss %}
                        <tr>
                          <td>{{ t.id }}</td>
                          <td>{{ t.lieu }}</td>
                          <td>{{ t.date|date('Y-m-d H:i:s') }}</td>
                          <td>{{ t.description }}</td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">Liste vide !</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
