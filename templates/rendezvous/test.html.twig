<center>
<h1>Enregistrement des Rendezvous</h1>
<table style="width:100%;" class="table" id="dataTable">
    <thead>
        <a href="{{ path('addF') }}" class="btn btn-Add">Add</a>
        <tr>
            <th scope="col">id</th>
            <th scope="col">lieu</th>
            <th scope="col">date</th>
            <th scope="col">description</th>
            <th scope="col">Actions</th> <!-- Rename the table header to "Actions" -->
        </tr>
    </thead>
    <tbody>
        {% for t in response %}
            <tr>
                <td>{{ t.id }}</td>
                <td>{{ t.lieu }}</td>
                <td>{{ t.date|date('Y-m-d H:i:s') }}</td>
                <td>{{ t.description }}</td>
                <td>
                    <a href="{{ path('update', {'id': t.id}) }}" class="btn btn-update">Update</a>
                    <a href="{{ path('remove', {'id': t.id}) }}" class="btn btn-delete">X</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</center>
