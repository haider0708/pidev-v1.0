            <Text fx:id="passError" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#save" text="Save" />
